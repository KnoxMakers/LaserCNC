.container
  .col-md-4.col-md-offset-4{style: "margin-top: 30px;"}
    .panel.panel-primary
      .panel-heading
        %h3.panel-title
          %strong Sign In
      .panel-body 
        %form{role: "form", method: "post", action: '/login'}
          .form-group
            %label{for: "username"} Username
            %input#username.form-control{name: "username", type: "text", placeholder: "Enter Username"}
          .form-group
            %label{for: "password"} Password
            %input#password.form-control{name: "password", type: "password", placeholder: "Password"}
          %button.btn.btn-sm.btn-success{type: "submit"} Sign In

